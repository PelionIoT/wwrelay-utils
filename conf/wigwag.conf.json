{
	"appServer" : true,
	"loadApps" : [ 
		{"classpath" : "WWWebAPI"},
		{"classpath" : "WWMobileUI"}
        ],	
	"requiredServices" : [
	     { "classpath" : "IPStack", "config" : { "wan" : "dhcp" }},
	     { "classpath" : "HotPlug", "config" : { "verbose": true }}
	],
	"relay_info" : {
		"providers" : {
        }
    },
    "runtimeConfig": {
        "appDirectories": [ "./devjs-usr" , "${core}"],
        "serviceDirectories" : [ "${core}" ],
        "facadeDirectories": [ "${core}" ],
        "services" : {},
        "deviceDirectories": [ "${core}" ],
        "ruleNodeDirectories": [ "${core}" ],
        "discovererDirectories": [ "${core}" ],
        "apps": {
            "mobileUI": {
                "classpath": "WWMobileUI",
                "config": { }
            },
            "webAPI": {
                "classpath": "WWWebAPI",
                "config": { }
            },
            "LogMonitor": {
                "classpath": "LogMonitor",
                "config": { }
            },
	    "webUI": {
		"classpath": "WWRelayWebUI",
                "defaultApp" : true,
	   	"config": { }
            },
            "webUpgradeApp": {
                "classpath": "WWUpgradeApp",
                "config": { }
            },
            "RelayEventBroker" : {
                "classpath": "RelayEventBroker",
                "config" : { }
            }

        },
        "rootDiscoverers": {
            "cloudDiscoverer": {
                "typeName": "RuleDeviceDiscoverer",
                "config": { },
                "enabled": true
            },
            "rootUPnP":{
                "typeName": "UPnPDiscoverer",
                "config": { 
                    "pollTime": 200
                },
                "enabled": true
            },
            "wwDiscoverer": {
                "typeName": "WigWagDiscoverer",
                "config": {
                    "interfacePort": 3000
                },
                "enabled": true
            }
        }
    }
}
