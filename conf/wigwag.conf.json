{
	"appServer" : true,
	"loadApps" : [ 
		{"classpath" : "WWWebAPI"},
		{"classpath" : "WWMobileUI"}
        ],	
	"requiredServices" : [
	     { "classpath" : "IPStack", "config" : { "wan" : "dhcp" }},
	     { "classpath" : "HotPlug", "config" : { "verbose": true }}
	],
	"relay_info" : {
		"providers" : {
        }
    },
    "runtimeConfig": {
        "appDirectories": [ "./devjs-usr" , "${core}"],
        "serviceDirectories" : [ "${core}" ],
        "facadeDirectories": [ "${core}" ],
        "overrideDatabase" : true,
        "services" : {
            "sixLBR": {
                "typeName": "SixLBR",
                "enabled" : true,
                "config": { 
                    "ifname": "tap0",
                    "wsnNet": "bbbb::100",
                    "sixlbr": {
                        "tundev": "tap0",
                        "use_raw_ethernet": false,
                        "log_level": ["packet", "debug", "info", "trace"],
                        "siodev": "ttyUSB2",
                        "baudrate": 115200,
                        "slip_delay": 15,
                        "nvm_data": {
                            "channel": 18
                        }
                    }
                }
            },
            "udpMultiplexerService": {
                "typeName": "UDPMultiplexerService",
                "enabled" : true,
                "config": {
                    "interfacePort": 3000
                }
            }
        },
        "deviceDirectories": [ "${core}" ],
        "ruleNodeDirectories": [ "${core}" ],
        "discovererDirectories": [ "${core}" ],
        "apps": {
            "mobileUI": {
                "classpath": "WWMobileUI",
                "config": { }
            },
            "webAPI": {
                "classpath": "WWWebAPI",
                "config": { 
                    "locationImagesDirectory" : "./images"
                }

            },
            "LogMonitor": {
                "classpath": "LogMonitor",
                "config": { }
            },
	        "webUI": {
		        "classpath": "WWRelayWebUI",
                "defaultApp" : true,
	   	        "config": { }
            },
            "WWRuleUI" : {
                "classpath": "WWRuleUI",
                "config" : { }
            },
            "RelayUpdateApp" : {
                "classpath": "RelayUpdateApp",
                "config": { 
                    "cloudURI": "https://cloud.wigwag.com/apps/upgrade",
                    "stagingDirectory": "/wigwagdownloads",
                    "installDirectory": "/wigwag/installs",
                    "versionsFile": "/etc/wigwag/versions.json"
                }
            },
            "webUpgradeApp": {
                "classpath": "WWUpgradeApp",
                "config": { }
            },
            "RelayEventBroker" : {
                "classpath": "RelayEventBroker",
                "config" : { }
            },
            "WWRelayWebUI" : {
                "classpath": "WWRelayWebUI",
                "config" : { }
            }

        },
        "rootDiscoverers": {
            "cloudDiscoverer": {
                "typeName": "RuleDeviceDiscoverer",
                "config": { },
                "enabled": true
            },
            "rootUPnP":{
                "typeName": "UPnPDiscoverer",
                "config": { 
                    "pollTime": 200
                },
                "enabled": true
            },
            "wwDiscoverer": {
                "typeName": "WigWagDiscoverer",
                "config": {
                    "interfacePort": 3000
                },
                "enabled": true
            }
        }
    }
}
